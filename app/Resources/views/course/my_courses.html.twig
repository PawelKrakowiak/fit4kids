{% block body %}

    {% if courses is not empty%}
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Nazwa kursu</th>
                            <th>Opis</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for course in courses %}
                            <tr>
                                <td>{{ course.title }}</td>
                                <td>{{ course.description }}</td>
                                <td scope="col">
                                    <a class="btn btn-default" href="{{ path('course_movies', { 'id': course.id }) }}">przejdż
                                        do filmów</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="col-md-3">
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            Nie masz jeszcze żadnych zakupionych kursów || <a href="/course">Przejdź do kursów</a>
        </div>
    {% endif %}

{% endblock %}
