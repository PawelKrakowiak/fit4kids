{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <h3>Course</h3>
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Title</th>
                        <td>{{ course.title }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ course.description }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ course.price }}</td>
                    </tr>
                    <tr>
                        <th>Likes</th>
                        <td>{{ course.likes }}</td>
                    </tr>
                    </tbody>
                </table>

                <ul>
                    <li><a href="{{ path('course_index') }}">Back to the list</a></li>
                </ul>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
{% endblock %}
