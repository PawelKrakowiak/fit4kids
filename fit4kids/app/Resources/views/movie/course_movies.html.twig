{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movies list</h1>
    {% for movie in movies %}
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        
            <tr>
                <td><a href="courseMovies" class="videoLink" data-id="{{movie.id}}">{{ movie.title }}</td>
                <td>{{ movie.description }}</td>
            </tr>
        
        </tbody>
    </table>
    {% endfor %}
    <div id="videoDiv">
        <video width="320" height="240" controls>
            <source id="video" src="" type="video/mp4">
        </video>
    </div>
{% endblock %}

{%block javascripts %}
    <script src="{{asset("bundles/app/js/showMovies.js")}}"></script>
{%endblock%}