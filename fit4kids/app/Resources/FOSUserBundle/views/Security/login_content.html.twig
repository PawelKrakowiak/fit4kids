{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form" role="form" method="post" action="{{ path("fos_user_security_check") }}"
      accept-charset="UTF-8" id="login-nav">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="form-group">
        <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"
               placeholder="Nazwa użytkownika" required>
    </div>
    <div class="form-group">
        <label class="sr-only"
               for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" class="form-control" name="_password"
               id="password" placeholder="Hasło" required>
        <div class="help-block text-right"><a href="">Zapomniałeś hasła?
            </a></div>
    </div>
    <div class="form-group">
        <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                class="btn btn-primary btn-block">Zaloguj
            się
        </button>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" id="remember_me" value="on" name="_remember_me"> {{ 'security.login.remember_me'|trans }}
        </label>
    </div>
</form>
